    <!--main info header-->
    <header class="d-flex p-2">
    <div class="overlay"></div>
    	<div class="container my-auto">
        	<div class="col-lg text-center">
            	<h2 class="text-uppercase boxed mx-auto"> &nbsp; P l a n s &nbsp; </h2>
            	<br>
        	</div>

<div class = "container my-auto">
    <div class="row">
        <div class="col-lg mx-auto text-center">

<form action = "/myPlan" method = "GET">
Occasion: <input list = "occasion" name = "occasion">
	<datalist id = "occasion">
		<option value = "Anniversary">
		<option value = "Birthday">
		<option value = "Business">
		<option value = "Cultural">
		<option value = "Dinner">
		<option value = "New Years Eve">
		<option value = "Outdoor Event">
		<option value = "Party">
		<option value = "Wedding">
		<option value = "Other">
	</datalist>
<input style = "background-color: #FF6699" type="submit" class="btn btn-secondary">
</form>
		</div>
	</div>
</div>
<br>
<br>

<div class ="col-lg">
    <h2>{{occasion}} Looks</h2>
</div>
<br>

{{#each looks as |looks|}}          
    <div class = "row">
    
    <!-- column 1 -->
        <div class="col-md">
            {{looks.occasion}} {{looks.emoji}}
        </div>
    
    <!-- column 2 -->
        <div class="col-md">
            {{looks.outfit}}
        </div>
    </div>
    <br>
{{/each}}

<br>

<div class = "container my-auto">
<div class="col-sm">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src= "/img/nye.gif" alt="New Years">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src= "/img/business.jpg" alt="Business">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src= "/img/culture.jpg" alt="Culture slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src= "/img/wedding.jpg" alt="Wedding slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
